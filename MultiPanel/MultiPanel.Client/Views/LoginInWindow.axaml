<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        Width="800" Height="450"
        MinWidth="380" MinHeight="440"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        x:Class="MultiPanel.Client.Views.LoginInWindow"
        DataContext="{Binding LoginInViewModel, Source={StaticResource ServiceLocator}}"
        Title="LoginInWindow">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" Source="avares://MultiPanel.Client/Assets/login_bg.jpg"
                    Stretch="UniformToFill" />
        <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#88ffffff" />
        <SolidColorBrush x:Key="WainingInfoBackgroundBrush" Color="#ccff0000" />
    </Window.Resources>
    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*,Auto,*" Margin="40,25">
        <Border Grid.Row="1" Grid.Column="1"
                Background="{DynamicResource HoverBackgroundBrush}" CornerRadius="15" Padding="15">
            <StackPanel Width="240" Spacing="10" Orientation="Vertical">
                <TextBlock Text="登陆" Classes="H2" VerticalAlignment="Stretch"
                           HorizontalAlignment="Center" />
                <TextBox Watermark="账号" UseFloatingWatermark="True"
                         Classes="FloatingTextBox FloatingClearButton"
                         Text="{Binding Username,Mode=TwoWay}" />
                <TextBox Watermark="密码" UseFloatingWatermark="True"
                         Classes="FloatingTextBox FloatingRevealPasswordButton"
                         Text="{Binding Password,Mode=OneWayToSource}"
                         PasswordChar="*" RevealPassword="True" />
                <CheckBox Content="记住我"
                          IsChecked="{Binding RememberMe,Mode=TwoWay}" />
                <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
                    <Button Theme="{DynamicResource SolidButton}" Classes="Secondary"
                            Content="登陆" Command="{Binding LoginClickCommand}" />
                    <Button Theme="{DynamicResource SolidButton}" Classes="Tertiary"
                            Content="注册" Command="{Binding RegisterClickCommand}" />
                </StackPanel>
            </StackPanel>
        </Border>
        <Panel Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Border Name="PART_WainingContainer" MinWidth="100" MaxWidth="250" Opacity="0" Transitions=""
                    Background="{DynamicResource WainingInfoBackgroundBrush}" CornerRadius="15" Padding="15">
                <Border.RenderTransform>
                    <ScaleTransform />
                </Border.RenderTransform>
                <TextBlock Name="PART_WainingText" Foreground="White"
                           TextAlignment="Center" TextWrapping="WrapWithOverflow" />
            </Border>
        </Panel>
    </Grid>
</Window>