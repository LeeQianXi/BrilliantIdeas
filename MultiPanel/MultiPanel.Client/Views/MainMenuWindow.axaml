<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        Width="800" Height="450"
        WindowStartupLocation="CenterScreen"
        x:Class="MultiPanel.Client.Views.MainMenuWindow"
        DataContext="{Binding MainMenuViewModel,Source={StaticResource ServiceLocator}}"
        Title="{Binding UserName,StringFormat='User:{0}',Mode=OneTime}">
    <Border>
        <Grid>
            <StackPanel>
                <TextBox Text="{Binding Auth.AccessToken,StringFormat='AccessToken:{0}',Mode=OneTime}" />
                <TextBox Text="{Binding Auth.RefreshToken,StringFormat='RefreshToken:{0}',Mode=OneTime}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>