<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
        <LangVersion>preview</LangVersion>
        <RootNamespace>MultiPanel.Avalonia</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia.Desktop" Version="11.3.7"/>
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.2.1"/>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.2.1"/>
        <PackageReference Include="Microsoft.Extensions.Logging" Version="9.2.1"/>
        <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.2.1"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\MultiPanel.Client\MultiPanel.Client.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <None Update="appsettings.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
