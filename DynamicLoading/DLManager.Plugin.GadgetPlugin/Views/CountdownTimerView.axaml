<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DLManager.Plugin.GadgetPlugin.Views.CountdownTimerView">
    <UserControl.Styles>
        <Style Selector="Button.Swi" />
    </UserControl.Styles>
    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*,Auto,*">
        <Border Grid.Row="1" Grid.Column="1"
                CornerRadius="5" Padding="10"
                MinWidth="200" MinHeight="200"
                Background="LightSkyBlue">
            <Grid RowDefinitions="*,Auto" ColumnSpacing="10">
                <Panel>
                    <Panel Name="Selector" IsVisible="False">
                        <TimePicker Name="Picker" SelectedTimeChanged="TimePicker_OnSelectedTimeChanged" />
                    </Panel>
                    <Panel Name="Timer" IsVisible="True">
                        <ProgressBar Name="Progress" Theme="{DynamicResource ProgressRing}" Classes="Primary"
                                     Width="180" Height="180" Margin="20" ShowProgressText="True"
                                     ValueChanged="Progress_OnValueChanged" />
                    </Panel>
                </Panel>
                <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto,*" ColumnSpacing="20">
                    <Button Grid.Column="1" Name="BtnSwitch" Classes="Swi" Content="开始" Click="BtnSwitch_OnClick" />
                    <Button Grid.Column="2" Name="BtnArise" Classes="Swi" IsVisible="False" Content="中断"
                            Click="BtnArise_OnClick" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>