<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="450"
             Loaded="Splash_Loaded"
             x:Class="TagImage.Core.Views.SplashView"
             DataContext="{Binding SplashViewModel,Source={StaticResource ServiceLocator}}">
    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*,Auto,*">
        <Grid Grid.Row="1" Grid.Column="1" RowDefinitions="Auto,Auto">
            <ProgressBar Name="PbPro" Theme="{DynamicResource ProgressRing}" Width="100" Height="100" />
            <TextBlock Grid.Row="1" Name="TbInfo" Text="StartLoad" HorizontalAlignment="Center" />
        </Grid>
    </Grid>
</UserControl>